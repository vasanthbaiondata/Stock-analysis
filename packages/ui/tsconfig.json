{
  "compilerOptions": {
    "target": "ES2020",

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",
    "lib": ["DOM", "ES2020"],

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@app/icons": ["../icons"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
